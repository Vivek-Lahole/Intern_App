<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="drawerArrowStyle">@style/DrawerIcon</item>
        <item name="colorControlNormal">@color/black</item>
    </style>


    <style name="MineCustomTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">10sp</item>
        <item name="android:fontFamily">@font/muli_regular</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>



    <style name="DrawerIcon" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/hamburgerBlack</item>
    </style>

    <style name="TextStyle">

        <item name="android:textSize">28sp</item>

        <item name="android:textColor">@color/black</item>

    </style>

    <style name="TextStyle6">

        <item name="android:gravity">center_horizontal</item>

        <item name="android:textSize">24sp</item>

        <item name="android:textColor">@color/black_two</item>

    </style>

    <style name="TextStyle4">

        <item name="android:gravity">center_horizontal</item>

        <item name="android:textSize">24sp</item>

        <item name="android:textColor">@color/black_two</item>

    </style>

    <style name="TextStyle3">

        <item name="android:gravity">center_horizontal</item>

        <item name="android:textSize">22sp</item>

        <item name="android:textColor">@color/white</item>

    </style>

    <style name="MyTabLayoutTextAppearance" parent="Base.Widget.Design.TabLayout">
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">rounded_mplus1c_medium</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="TextStyle7">

        <item name="android:gravity">center_horizontal</item>

        <item name="android:textSize">17sp</item>

        <item name="android:fontFamily">sans-serif</item>

        <item name="android:textStyle">normal</item>

        <item name="android:textColor">@color/black_two</item>

    </style>

    <style name="TextStyle2">

        <item name="android:textSize">16sp</item>

        <item name="android:textColor">@color/black_two</item>

    </style>

    <style name="TextStyle5">


        <item name="android:textSize">14sp</item>

        <item name="android:textColor">@color/white</item>

    </style>






    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <!-- Customize color of navigation drawer icon and back arrow -->
        <item name="colorControlNormal">@color/black</item>
    </style>






</resources>
